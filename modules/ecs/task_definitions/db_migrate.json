[
  {
    "name": "db-migrate",
    "image": "${image}",
    "command": ["bash", "-c", "'python manage.py migrate'"],
    "memory": 300,
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "us-east-1",
        "awslogs-stream-prefix": "db_migrate"
      }
    },
    "environment": [
      {
        "name": "DATABASE_URL",
        "value": "${database_url}"
      },
      {
        "name": "SECRET_KEY",
        "value": "${secret_key_base}"
      },
      {
        "name": "DJANGO_SETTINGS_MODULE",
        "value": "polyledger.settings.production"
      }
    ]
  }
]
