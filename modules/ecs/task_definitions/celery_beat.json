[
  {
    "name": "celery",
    "image": "${image}",
    "memory": 300,
    "networkMode": "awsvpc",
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "us-east-1",
        "awslogs-stream-prefix": "celery_beat"
      }
    },
    "volumesFrom": [],
    "links": [],
    "mountPoints": [],
    "essential": true,
    "command": ["celery", "--app", "polyledger", "beat", "--loglevel=INFO", "-s", "celerybeat-schedule.db"],
    "environment": [
      {
        "name": "PORT",
        "value": "80"
      },
      {
        "name": "SECRET_KEY",
        "value": "${secret_key_base}"
      },
      {
        "name": "DJANGO_SETTINGS_MODULE",
        "value": "polyledger.settings.production"
      },
      {
        "name": "EMAIL_HOST_PASSWORD",
        "value": "${email_host_password}"
      },
      {
        "name": "NPM_TOKEN",
        "value": "${npm_token}"
      },
      {
        "name": "BITBUTTER_BASE_URI",
        "value": "https://app-8697.on-aptible.com"
      },
      {
        "name": "BITBUTTER_API_KEY",
        "value": "${bitbutter_api_key}"
      },
      {
        "name": "BITBUTTER_API_SECRET",
        "value": "${bitbutter_api_secret}"
      },
      {
        "name": "BITBUTTER_PARTNERSHIP_ID",
        "value": "${bitbutter_partnership_id}"
      },
      {
        "name": "BITBUTTER_PARTNER_ID",
        "value": "${bitbutter_partner_id}"
      }
    ]
  }
]
